{% extends 'base.html.twig' %}

{% block title %}Hello ComentarioController!{% endblock %}

{% block body %}
<div class="container mt-4">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>nombreAutor</th>
                <th>texto</th>
                <th>fecha</th>
                <th>numPositivas</th>
                <th>numNegativas</th>
            </tr>
        </thead> 
        <tbody>
            {% for comentario in listaComentario %}
                <tr>
                    <td>{{ comentario.nombreAutor }}</td>
                    <td>{{ comentario.texto}}</td>
                    <td>{{ comentario.fecha|date('Y-m-d') }}</td>
                    <td>{{ comentario.numPositivas }}</td>
                    <td>{{ comentario.numNegativas }}</td>
                    <td>
                    {# boton de like #}
                    <button>
                     <a href="{{ path('like', {'id': comentario.id}) }}">
                            <i class="bi bi-pencil"></i> Valorar positivamente
                    </a>
                    </button>
                    </td>
                    <td>
                    {# boton de dislike #}
                    <button>
                     <a  href="{{ path('dislike', {'id': comentario.id}) }}">
                            <i class="bi bi-pencil"></i> Valorar negativamente
                    </a>
                    </button>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
     <!-- BotÃ³n "Crear" -->
    <div class="text-start"> 
    <button>
        <a href="{{path('crear_comentario')}}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Crear
        </a>
        </button>
    </div>
    </div>
{% endblock %}
